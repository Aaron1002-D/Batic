      <!-- 4. SECTION A PROPOS -->
      <section class="px-6 md:px-20 py-20 md:py-32">
        <!-- Bannière Image -->
        <div class="w-full border-8 border-[#0056b3]/30 overflow-hidden rounded-2xl mb-12">
          <img src="/resources/images/4065.webp" alt="BATIC" class="w-full h-64 md:h-[400px] object-cover" />
        </div>

        <div class="relative">
          <!-- Bloc Orange -->
          <div class="md:ml-32 bg-[#F7941D] rounded-2xl p-8 md:p-20 md:pl-48 shadow-2xl">
            <h2 class="text-white text-4xl md:text-6xl font-black uppercase italic leading-none mb-8">
              A propos de nous
            </h2>
            <div class="text-white text-lg md:text-xl leading-relaxed max-w-3xl opacity-90 font-light">
              <p>
                BATIC Sarl est votre partenaire de confiance dans le domaine de la construction et de l'immobilier. 
                Nous transformons vos visions en réalités durables grâce à notre expertise architecturale 
                et notre engagement envers l'excellence.
              </p>
            </div>
          </div>

          <!-- Bloc Blanc Superposé -->
          <div
            class="static md:absolute md:top-12 md:left-0 bg-white w-full md:w-80 h-64 md:h-96 rounded-2xl shadow-2xl mt-[-4rem] md:mt-0 overflow-hidden flex items-center justify-center p-4 border-4 border-white"
          >
            <img
              src="/resources/images/4065.webp"
              class="w-full h-full object-cover rounded-lg opacity-40"
              alt="Deco"
            />
          </div>
        </div>
      </section>
      @!component('components/footer')

      <style>
        /* Animation des coins du labyrinthe */
        
        .maze-corner {
          position: absolute;
          width: 0;
          height: 0;
          transition: all 3.5s cubic-bezier(0.7, 0, 0.3, 1);
          background: repeating-linear-gradient(45deg, transparent, transparent 40px, rgba(247, 148, 29, 0.03) 40px, rgba(247, 148, 29, 0.03) 41px);
        }
        
        .maze-active .maze-corner {
          width: 55%;
          height: 55%;
        }
        
        /* Particules de neige */
        
        .flake {
          position: absolute;
          background: white;
          border-radius: 50%;
          opacity: 0;
          pointer-events: none;
        }
        
        /* Effet d'illumination du logo */
        
        .logo-glow {
          opacity: 1 !important;
          scale: 1 !important;
          blur: 0 !important;
          filter: drop-shadow(0 0 30px rgba(247, 148, 29, 0.4));
        }
        
        /* Lignes de visée */
        
        .target-line {
          transition: transform 2s cubic-bezier(0.19, 1, 0.22, 1);
          pointer-events: none;
        }
        
        .maze-active .target-line {
          transform: translate(-50%, -50%) scale(1);
        }
        
        /* Animation de pulsation du labyrinthe */
        
        @keyframes maze-pulse {
          0%, 100% {
            border-color: rgba(247, 148, 29, 0.2);
          }
        
          50% {
            border-color: rgba(247, 148, 29, 0.5);
          }
        }
        
        .maze-corner {
          animation: maze-pulse 2s infinite;
        }
      </style>

      <script>
        document.addEventListener("DOMContentLoaded", () => {
          const modal = document.getElementById("maze-modal");
          const assembly = document.querySelector("#batic-assembly h1");
          const statusText = document.getElementById("maze-status");
          const snowField = document.getElementById("snow-field");
          document.body.style.overflow = "hidden";
          // 1. Générer la neige dorée/blanche
          for (let i = 0; i < 120; i++) {
            const flake = document.createElement("div");
            flake.className = "flake";
            const size = Math.random() * 3 + 1 + "px";
            const isGold = Math.random() > .7;
            flake.style.width = size;
            flake.style.height = size;
            flake.style.backgroundColor = isGold ? "#F7941D" : "#ffffff";
            flake.style.left = Math.random() * 100 + "%";
            flake.style.top = -10 + "%";
            snowField.appendChild(flake);
            flake.animate([ {
              top: "-2%",
              opacity: 0,
              transform: "translateX(0) rotate(0deg)"
            }, {
              opacity: .8,
              offset: .2
            }, {
              top: "100%",
              opacity: 0,
              transform: `translateX(${Math.random() * 100 - 50}px) rotate(360deg)`
            } ], {
              duration: Math.random() * 4e3 + 3e3,
              iterations: Infinity,
              delay: Math.random() * 5e3
            });
          }
          // 2. Lancer la séquence cinématique
          setTimeout(() => {
            // Déploiement du labyrinthe
            modal.classList.add("maze-active");
            setTimeout(() => {
              statusText.style.opacity = "1";
              statusText.style.transition = "opacity 1s";
            }, 1e3);
            // 3. Convergence finale (Rencontre au milieu)
            setTimeout(() => {
              statusText.textContent = "Structure stabilisée.";
              assembly.classList.add("logo-glow");
              // Vibration subtile au moment de l'impact
              modal.animate([ {
                transform: "translate(1px, 1px) rotate(0deg)"
              }, {
                transform: "translate(-1px, -2px) rotate(-0.1deg)"
              }, {
                transform: "translate(0px, 0px) rotate(0deg)"
              } ], {
                duration: 200
              });
            }, 3e3); // Temps pour que les coins se rejoignent
          }, 500);
          // 4. Sortie de l'expérience
          setTimeout(() => {
            modal.style.transition = "all 1.5s cubic-bezier(0.7, 0, 0.3, 1)";
            modal.style.opacity = "0";
            modal.style.transform = "scale(1.2) translateY(50px)";
            setTimeout(() => {
              modal.remove();
              document.body.style.overflow = "";
            }, 1500);
          }, 7e3);
        });
      </script>

    </main>
  @endslot
@end
