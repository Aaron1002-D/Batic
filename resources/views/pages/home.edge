              class="relative overflow-hidden rounded-[2rem] h-64 md:h-80 group shadow-xl border border-white/10"
            >
              <img
                src="/resources/images/4065.webp"
                class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-[#191256]/90">
              </div>
              <div class="relative z-10 p-8">
                <h3 class="text-white text-2xl font-bold uppercase italic">
                  Investir dans l’immobilier
                </h3>
                <p class="text-[#F7941D] font-bold text-sm mt-2 uppercase">
                  conception et suivi des projets
                </p>
              </div>
            </div>
          </div>

          <!-- COLONNE DROITE -->
          <div class="flex flex-col gap-8">
            <!-- Carte 2 - Bleu (Grande) -->
            <div
              class="relative overflow-hidden rounded-[2rem] h-[30rem] md:h-[40rem] group shadow-xl border border-white/10"
            >
              <img
                src="/resources/images/4065.webp"
                class="absolute inset-0 w-full h-full object-cover transition duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-[#191256]/90">
              </div>
              <div class="relative z-10 p-10">
                <h2 class="text-white text-4xl md:text-5xl font-black uppercase italic leading-none">
                  Investir dans l’immobilier
                </h2>
                <p class="text-[#F7941D] font-bold text-xl mt-6 uppercase tracking-widest">
